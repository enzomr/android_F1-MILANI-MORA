<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zinzoline"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="32sp"
    android:paddingRight="32sp"
    android:rotationX="0"
    android:showDividers="middle"
    android:divider="@drawable/empty_tall_divider"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:shadowColor="@color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <Button
        android:id="@+id/mathButton"
        style="@style/StartActivityButton"
        android:shadowColor="#FFFFFF"
        android:shadowDx="2"
        android:shadowRadius="2"
        android:onClick="onMathButtonClick"
        android:text="@string/math_facts" />

    <Button
        android:id="@+id/triviaButton"
        style="@style/StartActivityButton"
        android:onClick="onTriviaButtonClick"
        android:text="@string/trivias"
        />

    <LinearLayout
        android:layout_height="50sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="275sp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="date"
            android:autofillHints="mm/dd"
            android:paddingEnd="10sp"
            tools:ignore="LabelFor" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar_background"
/>

    </LinearLayout>


    <TextView
        android:id="@+id/explanationText"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:text="Explanations" />

    <TextView
        android:id="@+id/randomFactText"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="TextView" />

</LinearLayout>